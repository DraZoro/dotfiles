"Date	: 18 December 2014
"Email  : clement.mahlangu@gmail.com

set nocompatible
filetype off

" Include Vundle and initialize
set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()

Plugin 'gmarik/Vundle'
Plugin 'tpope/vim-fugitive'
Plugin 'tpope/vim-commentary'
Plugin 'tpope/vim-sensible'
Plugin 'Rykka/riv.vim.git'
Plugin 'SirVer/ultisnips'
Plugin 'scrooloose/nerdtree'
Plugin 'sjl/gundo.vim.git'
Plugin 'scrooloose/syntastic'
Plugin 'Valloric/YouCompleteMe'
Plugin 'Valloric/Vim-Jinja2-Syntax'
Plugin 'sukima/xmledit'
Plugin 'powerline/powerline', {'rtp': 'powerline/bindings/vim/'}
Plugin 'anyakichi/vim-surround'
Plugin 'Raimondi/delimitMate'
Plugin 'Lokaltog/vim-distinguished'
Plugin 'sjl/badwolf'
Plugin 'jelera/vim-javascript-syntax'
Plugin 'nathanaelkane/vim-indent-guides'

" End of plugins for Vundle
call vundle#end()
" filetype plugin indent on
filetype plugin on 

" Modeline for python
autocmd FileType python set sw=4
autocmd FileType python set ts=4
autocmd FileType python set sts=4

" Some colourful things here "
set t_Co=256
syntax on
set background=dark
colorscheme distinguished


" Allow auto indentation
set autoindent 

" Keeping track of location 
set cursorline 

" Ignore case when searching"
set ignorecase 

" Reduce shiftwidth
set shiftwidth=2

" Highlight the searched item
set hlsearch

" Encoding "
set encoding=utf8
" Show location of cursor 
set ruler 

"s All numbers are decimal system. 
set nrformats=

" Increased search history
set history=100

" Show numbers
set number

" Matching brackets 
set showmatch 

" Make tab to cover four characters of space
set softtabstop=2

" Set grep to always generate a file-name "
set grepprg=grep\ -nH\ $*

" Some short cut keys "
nmap <silent> <F3> :NERDTreeToggle<CR>
nmap <silent> <F4> :GundoToggle<CR>

" Shortcuts for moving between tabs
" Alt-j to move to the tab to the left 
nmap <A-j> gT
" Alt-k to move to the tab to the right
nmap <A-k> gt

" Plugin configurations "
"
" Powerline 

let g:powerline_symbols = "fancy"
" Gundo "
let g:gundo_width = 40
let g:gundo_preview_height = 10
let g:gundo_right = 1

" YouCompleteMe "
let g:ycm_add_preview_to_complteopt=0
let g:ycm_collect_identifiers_from_tags_files = 1 
let g:ycm_use_ultisnips_completer = 1 
let g:ycm_seed_identifiers_with_syntax = 1 
let g:ycm_complete_in_comments = 1 
let g:ycm_complete_in_strings = 1 
set completeopt-=preview
" Ultasnips "
let g:UltiSnipsExpandTrigger       = "<c-j>"
let g:UltiSnipsJumpForwardTrigger  = "<c-j>"
let g:UltiSnipsJumpBackwardTrigger = "<c-p>"
let g:UltiSnipsListSnippets        = "<c-k>" "List possible snippets based on current file
let g:UltiSnipsUsePythonVersion    = 2

" Number Toggle 
let g:NumberToggleTrigger="<F5>"
